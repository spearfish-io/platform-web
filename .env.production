# Production Environment (Vercel Production)
# Used for production deployments on Vercel

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://platform-web.vercel.app

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yourcompany.com/api
# API_SECRET_KEY should be set in Vercel dashboard

# Production Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# Production Database
# DATABASE_URL should be set in Vercel dashboard
DATABASE_POOL_MAX=20

# Authentication
# NEXTAUTH_SECRET should be set in Vercel dashboard
NEXTAUTH_URL=https://platform-web.vercel.app

# Third-party Services (Production)
# Production analytics and error tracking
# NEXT_PUBLIC_ANALYTICS_ID should be set in Vercel dashboard
# SENTRY_DSN should be set in Vercel dashboard

# Performance Optimization
NEXT_PUBLIC_CDN_URL=https://cdn.yourcompany.com

# OpenTelemetry / Dash0 Configuration (Production)
# DASH0_AUTH_TOKEN should be set in Vercel dashboard
DASH0_DATASET=production
DASH0_TRACE_ENDPOINT=https://api.dash0.com/v1/traces
DASH0_METRICS_ENDPOINT=https://api.dash0.com/v1/metrics
DASH0_LOGS_ENDPOINT=https://api.dash0.com/v1/logs