# Environment Configuration Template
# Copy this file to create your environment-specific .env files

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration  
NEXT_PUBLIC_API_URL=http://localhost:5000/
API_SECRET_KEY=local-development-secret-key

# Authentication Mode
# Set NEXT_PUBLIC_AUTH_MODE to one of: mock, oauth, legacy
# - mock: MSW test credentials for offline development
# - oauth: Modern OAuth 2.0 platform-api (default)
# - legacy: Cookie-based portal-spearfish style authentication
NEXT_PUBLIC_AUTH_MODE=legacy

# OAuth Configuration
AUTH_SECRET=your-auth-secret-here-must-be-32-chars-minimum
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (Optional - for local testing)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenTelemetry / Dash0 Configuration
DASH0_AUTH_TOKEN=your-dash0-auth-token-here
DASH0_DATASET=dev
DASH0_TRACE_ENDPOINT=https://api.dash0.com/v1/traces
DASH0_METRICS_ENDPOINT=https://api.dash0.com/v1/metrics
DASH0_LOGS_ENDPOINT=https://api.dash0.com/v1/logs

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# Development Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Development Database Connection (if needed)
DATABASE_URL=postgresql://localhost:5432/platform_web_dev
DATABASE_POOL_MAX=5

# Vercel Environment Variables (auto-populated)
# VERCEL=1
# VERCEL_ENV=development|preview|production
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_GIT_COMMIT_SHA=commit-hash

# Azure Environment Variables (if migrating)
# AZURE_CLIENT_ID=your-azure-client-id
# AZURE_CLIENT_SECRET=your-azure-client-secret
# AZURE_TENANT_ID=your-azure-tenant-id